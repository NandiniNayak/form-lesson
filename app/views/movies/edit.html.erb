<h1> Edit Movie </h1>

<%# action indicates upon submit which route gets exceuted %>
<form action="<%=movie_path(params[:id])%>" method="POST" >
    <input type="hidden" value="<%=form_authenticity_token%>" name="authenticity_token">
    <input type="hidden" name="_method" value="PATCH">
    <label> Title</label>
    <input type="text" name="movie[title]" value="<%=@movie["title"] %>">
    <label> Rating </label>
    <input type="number" name="movie[rating]" value="<%= @movie["rating"]%>" min="1" max="10">
    <input type="submit" value="Update">
</form>